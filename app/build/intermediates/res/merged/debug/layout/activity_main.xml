<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:padding="8dp">

    <TextView
        android:id="@+id/mainTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_label"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="25dp" />

    <WebView
        android:id="@+id/mainWebView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="12dp"
        android:paddingTop="30dp"
        android:layout_below="@+id/mainFAQButton" />

    <TextView
        android:id="@+id/mainTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hours_label"
        android:layout_below="@id/mainTextView1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/hours"
        android:id="@+id/textView3"
        android:layout_below="@id/mainTextView2"
        android:layout_centerHorizontal="true"
        android:padding="5dp" />

    <Button
        android:id="@+id/mainFAQButton"
        android:text="@string/faq_button_str"
        android:onClick="onFAQButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/mainAppointmentButton"
        android:text="@string/appointment_button"
        android:onClick="onAppointmentButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:paddingTop="20dp" />

    <Button
        android:id="@+id/mainInfoButton"
        android:text="@string/info_button"
        android:onClick="onInfoButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:paddingTop="20dp"
        android:layout_above="@+id/mainWebView"
        android:layout_toRightOf="@+id/mainTextView1"
        android:layout_toEndOf="@+id/mainTextView1" />

</RelativeLayout><!-- From: file:/C:/Users/rapha/StudioProjects/CCPDAppFinal/app/src/main/res/layout/activity_main.xml -->